generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      Int       @id @default(autoincrement())
  username                String    @unique
  password                String    @unique
  email                   String    @unique
  player_name             String
  smarts                  Int       @default(0)
  charm                   Int       @default(0)
  power                   Int       @default(0)
  heartvsmind             Int       @default(50)
  optimismvspessimism     Int       @default(50)
  forcefulvsaccomodating  Int       @default(50)
  createdAt               DateTime  @default(now())
}
